{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": ["next/core-web-vitals"],
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "rules": {
    "@next/next/no-img-element": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.*", "tests/**/*"],
      "env": { "jest": true },
      "globals": { "vi": "readonly", "expect": "readonly", "describe": "readonly", "it": "readonly" }
    }
  ]
}
